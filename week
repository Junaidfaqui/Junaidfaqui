// Online C compiler to run C program online
#include <stdio.h>

int main() {
    // Write C code here


    int week;
    printf("enter a day in week from 1 to 7 ");
    scanf("%d",&week);
    switch(week)
    {
    case 1:
    printf("monday");
    break;
    case 2:
    printf("tuesday");
    break;
    case 3: 
    printf("wednesday");
break;
case 4:
printf("thursday");
break;
case 5:
printf("friday");
break;
case 6:
printf("saturay");
break;
case 7:
printf("sunday");
break;
default:
printf("invalid imput! please enter week number 1-7");
}
}
